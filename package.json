{
  "name": "@andresaya/ssml-builder",
  "version": "1.0.1",
  "description": "TypeScript library for building SSML documents",
  "author": "Andres Aya",
  "license": "MIT",
  "repository": "github:andresayac/ssml-builder",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "docs": "ts-docgen src/**/*.ts --out-dir docs",
    "docs:watch": "typedoc --watch",
    "docs:serve": "bunx serve docs"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/bun": "latest"
  },
  "keywords": [
    "ssml",
    "tts",
    "azure",
    "speech"
  ]
}
